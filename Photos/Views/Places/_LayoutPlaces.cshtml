@{
    ViewBag.Title = "Places";
}

<div class="container-fluid">
    <div style="margin-left:10px">
        <div class="row">
            <h2 class="page-header text-center">Places</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <div class="row">
                        <div class="panel panel-default" style="height:  360px">
                            <div class="panel-heading">
                                @Ajax.ActionLink("Create New", "_Create", "Places",
                                new AjaxOptions
                                {
                                    UpdateTargetId = "PlaceHolderEdit",
                                    OnSuccess = "changeElementText('Add a New Place','#editPanalHeader')"
                                },
                                new { @class = "btn btn-primary" }
                                )

                            </div>
                            <div id="PlaceHolderIndexTable" class="panel-body">
                                @Html.Action("_IndexTable", "Places")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="panel panel-default" style="height:  400px">
                            <div id="editPanalHeader" class="panel-heading text-center">
                                Edit Area
                            </div>
                            <div id="PlaceHolderEdit" ></div>
                        </div>
                    </div>
                </div>
                <!--Map-->
                <div id="mapDiv" class="panel panel-default col-xs-6">
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script type='text/javascript'
        src='http://www.bing.com/api/maps/mapcontrol?branch=release&callback=GetMap'
        async defer></script>
<script src="~/Scripts/Maps.js"></script>
<script src="~/Scripts/ChangeElelment.js"></script>
<script> onload = "GetMap();"</script>