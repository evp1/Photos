@{
    ViewBag.Title = "Folders";
}

<head>
    @Scripts.Render( "~/bundles/jquery" )
    <script src="~/Scripts/ChangeElelment.js"></script>
</head>

<div style="margin-left:10px">
    <div class="row">
        <h2 class="page-header text-center">Folders</h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-7">
                <div class="row">
                    <div class="panel panel-default" style="height:  360px">
                        <div class="panel-heading">
                            @Ajax.ActionLink("Create New", "_Create", "Folders",
                                new AjaxOptions
                                {
                                    UpdateTargetId = "PlaceHolderEdit",
                                    OnSuccess = "changeElementText('Add a New Folder','#editPanalHeader')"
                                },
                                new { @class = "btn btn-primary" }
                                )

                        </div>
                        <div id="PlaceHolderIndexTable" class="panel-body">
                            @Html.Action("_IndexTable", "Folders")
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="panel panel-default" style="height:  400px">
                        <div id="editPanalHeader" class="panel-heading text-center">
                        </div>
                        <div id="PlaceHolderEdit" class="panel-body"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-7"></div>
    </div>
</div>

